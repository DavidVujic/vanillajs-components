{
    "parserOptions": {
        "ecmaVersion": "2017",
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": 2,
        "no-console": 0,
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-unused-vars": 0,
        "react/prop-types": 0 
    },
    "globals": {
        "define": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
