{
  "name": "vanillajs-components",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deps:lib": "mkdir -p -v lib/vendor",
    "deps:requirejs": "npm run deps:lib && cp node_modules/requirejs/require.js lib/vendor/requirejs.js",
    "deps:mustache": "npm run deps:lib && cp node_modules/mustache/mustache.min.js lib/vendor/mustache.min.js",
    "lint": "eslint .",
    "build": "npm run lint && npm run deps:requirejs && npm run deps:mustache",
    "start": "npm run build && python3 -m http.server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavidVujic/vanillajs-components.git"
  },
  "author": "David Vujic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DavidVujic/vanillajs-components/issues"
  },
  "homepage": "https://github.com/DavidVujic/vanillajs-components#readme",
  "devDependencies": {
    "eslint": "7.*"
  },
  "dependencies": {
    "mustache": "4.*",
    "requirejs": "^2.3.5"
  }
}
